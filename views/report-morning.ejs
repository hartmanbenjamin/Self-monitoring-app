<%- include('./partials/header.ejs') %>
<form method="GET" action="/behavior/reporting">
    <input type="submit" value="Back"/>
</form>
<h1>MORNING</h1>

<form method="POST">
    <p>Date:</p>
    <input type="date" name="date" value="<%= date %>"/>
    <p>How long did you sleep (in hours)?</p>
    <input type="number" name="sleep_duration" min="1" max="24" step="0.1" required="true"/>
    <p>How did you find your sleep quality (on a scale from 1-5)?</p>
    <input type="range" name="sleep_quality" min="1" max="5" step="1" list="steplist"/>
    <p>How's your general mood this morning (on a scale from 1-5)?</p>
    <input type="range" name="mood" min="1" max="5" step="1" list="steplist"/>
    <p></p>
    <datalist id="steplist">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </datalist>
    <input type="submit" value="Submit!"/>
</form>

